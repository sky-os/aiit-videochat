    // アプリケーション全体高さ設定
    AIIT.app_height = 700;
    // うち、SWF部の高さ設定
    AIIT.app_height_swf = 600;

    // マイミク招待ウィンドウ表示時に下げる高さ
    AIIT.app_top_margin_on_invite = 600;


